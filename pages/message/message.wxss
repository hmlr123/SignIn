/* pages/message/message.wxss */

.type_text {
  display: block;
  color: #000;
  font-size: 16px;
  text-align: center;
}

page {
  height: 100%;
}

.mymessage {
  border-bottom: 1px solid #ccc;
  padding-bottom: 5px;
}

.mymessage_Card {
  height: 50px;
  border-bottom: 1px solid #ccc;
  margin-top: 10px;
  padding-bottom: 5px;
}

.mymessage_Card_Item image {
  float: left;
  height: 40px;
  width: 40px;
  line-height: 50px;
  margin: 5px 15px;
}

.mymessage_Card_Title {
  font-weight: 700;
}

.message_Date {
  display: block;
  float: right;
  font-size: 10px;
  color: #bfbfbf;
  margin-right: 20px;
}

.mymessage_Card_Content {
  font-size: 14px;
  color: #bfbfbf;
  margin-top: 4px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /* margin-right: 40rpx; */
}

.mymessage_Card_Item .message_num {
  float: right;
  height: 20px;
  width: 20px;
  margin-right: 30px;
}

.mymessage_item image {
  display: block;
  width: 100px;
  height: 100px;
  margin: 120px auto 10px;
}

.type_text1 {
  display: block;
  color: #bfbfbf;
  font-size: 14px;
  text-align: center;
}

.noshadow {
  hover-class: none;
}
